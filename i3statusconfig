# Theme at i3config file
general {
        output_format = "none"
        colors = true
        interval = 5
        color_good = "#859900"
        color_degraded = "#b58900"
        color_bad = "#dc322f"
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}


tztime local {
        format = "%Y-%m-%d %H:%M"
}

volume master {
        format = "ðŸ”Š %volume"
        format_muted = "ðŸ”Š muted"
        device = "default"
        mixer = "Master"
}
