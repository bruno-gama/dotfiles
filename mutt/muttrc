# (heavily) Inspired by https://pbrisbin.com/posts/mutt_gmail_offlineimap/
# Also a bit from https://pbrisbin.com/posts/two_accounts_in_mutt/

set mbox_type   = Maildir
set folder      = ~/Mail

# Multiple account configuration
source ~/.mutt/accounts/index

# main options
set realname   = "Bruno Gama"
set mail_check = 0
set envelope_from

unset move           # gmail does that
set delete           # don't ask, just do
unset confirmappend  # don't ask, just do!
set quit             # don't ask, just do!!
unset mark_old       # read/new is good enough for me

# sort/threading
set sort     = threads
set sort_aux = reverse-last-date-received
set sort_re

# look and feel
set pager_index_lines = 8
set pager_context     = 5
set pager_stop
set menu_scroll
set smart_wrap
set tilde
unset markers

# composing 
set fcc_attach
unset mime_forward
set forward_format = "Fwd: %s"
set include
set forward_quote
set editor="vim"

ignore *                               # first, ignore all headers
unignore from: to: cc: date: subject:  # then, show only these
hdr_order from: to: cc: date: subject: # and in this order

# handle html email (http://jasonwryan.com/blog/2012/05/12/mutt/)
auto_view text/html                                      # view html automatically
alternative_order text/plain text/enriched text/html     # save html for last
